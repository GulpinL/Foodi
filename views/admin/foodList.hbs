<table class="table">
  <thead>
    <tr>
      <th scope="col">#id</th>
      <th scope="col">Name</th>
      <th scope="col">Price</th>
      <th scope="col">Category</th>
      <th scope="col">Description</th>
      <th scope="col">img</th>
      <th scope="col">Rating</th>
      <th scope="col">Update</th>
      <th scope="col">Delete</th>
    </tr>
  </thead>
  <tbody>
    {{#each foods}}
    <tr>
      <th scope="row">{{this._id}}</th>
      <td>{{this.name}}</td>
      <td>{{this.price}}</td>
      <td>{{this.category}}</td>
      <td>{{this.description}}</td>
      <td><a href="{{this.img}}" class="btn btn-primary">image</a></td>
      <td>{{this.rating}}</td>
      <td><a href="updateFood/{{this.slug}}" class="btn btn-primary">update</a></td>
      <td><form id="{{this.slug}}" method="post" action="deleteFood/{{this.slug}}"></form>
<a onclick="document.getElementById('{{this.slug}}').submit();" class="btn btn-primary">delete it</a></td>
    </tr>
    {{/each}}
    
  </tbody>
</table>
