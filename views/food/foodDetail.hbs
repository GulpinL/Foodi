
<div class="mt-4">
  <div class="row">
    

    <div class="col-lg-9">
      <h2>Món: {{food.name}}</h2>
      <img src="{{food.img}}" alt="" srcset="">
      <p>Mô tả: {{food.description}}</p>
     
      {{!-- <p>DDánh giá: {{food.rating}}</p> --}}
    </div>
    <div class="col-lg-3">
      <p>giá tiền: {{food.price}}</p>
      <div >
        <button class="btn btn-success">Mua ngay</button>
      </div>
    </div>
  </div>
</div>


<div>
  COMMENT
</div>
{{#each comments}}
                <div class="form-control">{{content}}</div>
                {{/each}}


<form action='{{food.slug}}/addComment' method="POST">
    <div class="form-group">
      <!-- Password   /-->
      <label >Comment here</label>
      <div >
        <input class="form-control" type="text" id="comment" name="comment" placeholder="New Comment" >
      </div>
    </div>
      <!-- Button -->
      <div >
        <button class="btn btn-success">Comment</button>
      </div>
  </form>


{{!-- Show related product --}}
<label >related product</label>
<div class="food_section layout_padding">
    <section class="container">
<div class="filters-content">
        <div class="row grid">
           {{#each relatedFoods}}
          <div class="col-sm-6 col-lg-4 all pizza">
            <div class="box">
              <div>
                <div class="img-box">
                  {{!-- <img src="images/f1.png" alt=""> --}}
                  <img src={{img}} alt="">
                </div>
                <div class="detail-box">
                  <h5>
                    {{!-- Delicious Pizza --}}
                    <a href="/food/{{slug}}">
                                  {{name}}
                                </a>
                  </h5>
                 
                  <div class="options">
                    <h6>
                      {{!-- $20 --}}
                      ${{price}}
                    </h6>
                   
                  </div>
                </div>
              </div>
            </div>
          </div>
           {{/each}}


         </div>
          
        </div>
      </section>
    </div>